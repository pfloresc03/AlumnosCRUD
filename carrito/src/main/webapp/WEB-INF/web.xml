<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>carritoservlet</servlet-name>
        <servlet-class>servlets.carritoservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>redireccionaservlet</servlet-name>
        <servlet-class>servlets.redireccionaservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validausuarioservlet</servlet-name>
        <servlet-class>servlets.validausuarioservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>carritoservlet</servlet-name>
        <url-pattern>/carritoservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>redireccionaservlet</servlet-name>
        <url-pattern>/redireccionaservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validausuarioservlet</servlet-name>
        <url-pattern>/validausuarioservlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
